// Test A (création utilisateur) - Depuis Postman vers Render
// POST https://burgerrestau-backend.onrender.com/api/auth/register

// Dans le body, ajoutez ceci :
{
 "name": "Admin",   
 "email": "tab@bh.com",
 "password": "..." // Mettez un mot de passe qui sera identique à JWT_SECRET dans Render qui est dans la variable d'environnement
}

// Test authentification
// POST https://burgerrestau-backend.onrender.com/api/auth/login
{
 "email": "tab@bh.com",
 "password": "..." // Mettez un mot de passe qui sera identique à JWT_SECRET dans Render qui est dans la variable d'environnement
}

// Si tout est correct, vous devriez avoir un message de ce genre :
{
    "token": "eyJhbGciOiJIUzI1Ni...",
    "user": {
        "id": "693414870....",
        "email": "tab@bh.com",
        "name": "Admin",
        "role": "admin"
    }
}

